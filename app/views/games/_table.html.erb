
<div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">White</th>
        <th scope="col">Black</th>
        <th scope="col">Date</th>
      </tr>
    </thead>
    <tbody>
      <% games.each do |game| %>
        <tr class="showButton" style="cursor: pointer" data-game-path="<%= game_path(game) %>">
          <td><%= game.white.name %></td>
          <td><%= game.black.name %></td>
          <td><%= game.date %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>